/* Floating Animation for Image */
.floating-animation {
    animation: float-image 6s ease-in-out infinite;
    transform-origin: center center;
}

@keyframes float-image {

    0%,
    100% {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-20px);
    }
}

/* Feature/Service Cards (Stripe-like) - Brand Aligned with Corner Decorations - NAVY BLUE */
.premium-card {
    background: linear-gradient(135deg, rgba(11, 27, 61, 0.95) 0%, rgba(11, 27, 61, 0.85) 100%);
    backdrop-filter: blur(12px);
    border: 1.5px solid rgba(225, 29, 46, 0.3);
    box-shadow:
        0 4px 6px -1px rgba(0, 0, 0, 0.3),
        0 2px 4px -1px rgba(0, 0, 0, 0.2),
        inset 0 1px 0 0 rgba(255, 255, 255, 0.1),
        inset 0 0 0 1px rgba(225, 29, 46, 0.1);
    border-radius: 12px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    overflow: visible;
}


/* Bottom corners (via child elements) */
.premium-card .corner-bl {
    position: absolute;
    bottom: -2px;
    left: -2px;
    width: 20px;
    height: 20px;
    border-left: 2.5px solid rgba(225, 29, 46, 0.6);
    border-bottom: 2.5px solid rgba(225, 29, 46, 0.6);
    border-radius: 0 0 0 12px;
    pointer-events: none;
    transition: border-color 0.3s ease;
    z-index: 2;
}

.premium-card .corner-br {
    position: absolute;
    bottom: -2px;
    right: -2px;
    width: 20px;
    height: 20px;
    border-right: 2.5px solid rgba(225, 29, 46, 0.6);
    border-bottom: 2.5px solid rgba(225, 29, 46, 0.6);
    border-radius: 0 0 12px 0;
    pointer-events: none;
    transition: border-color 0.3s ease;
    z-index: 2;
}


/* Corner hover effects - change to bright Red */
.premium-card:hover::before,
.premium-card:hover::after,
.premium-card:hover .corner-bl,
.premium-card:hover .corner-br {
    border-color: #E11D2E;
}

.premium-card:hover {
    background: linear-gradient(135deg, rgba(11, 27, 61, 1) 0%, rgba(15, 35, 75, 0.95) 100%);
    transform: translateY(-4px);
    box-shadow:
        0 20px 60px rgba(225, 29, 46, 0.25),
        0 0 0 1px rgba(225, 29, 46, 0.4),
        inset 0 1px 0 0 rgba(255, 255, 255, 0.15);
    border-color: rgba(225, 29, 46, 0.5);
}

/* Light reflection overlay - adjusted for dark background */
.premium-card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 12px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
    opacity: 0.8;
    pointer-events: none;
    z-index: 1;
}

/* Top corners - Red tint for Navy background */
.premium-card .corner-tl {
    position: absolute;
    top: -2px;
    left: -2px;
    width: 20px;
    height: 20px;
    border-left: 2.5px solid rgba(225, 29, 46, 0.6);
    border-top: 2.5px solid rgba(225, 29, 46, 0.6);
    border-radius: 12px 0 0 0;
    pointer-events: none;
    transition: border-color 0.3s ease;
    z-index: 2;
}

.premium-card .corner-tr {
    position: absolute;
    top: -2px;
    right: -2px;
    width: 20px;
    height: 20px;
    border-right: 2.5px solid rgba(225, 29, 46, 0.6);
    border-top: 2.5px solid rgba(225, 29, 46, 0.6);
    border-radius: 0 12px 0 0;
    pointer-events: none;
    transition: border-color 0.3s ease;
    z-index: 2;
}

/* Update hover effects for all corners */
.premium-card:hover .corner-tl,
.premium-card:hover .corner-tr,
.premium-card:hover .corner-bl,
.premium-card:hover .corner-br {
    border-color: #E11D2E;
}

.premium-card-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    background: linear-gradient(135deg, rgba(225, 29, 46, 0.2) 0%, rgba(225, 29, 46, 0.1) 100%);
    border: 1px solid rgba(225, 29, 46, 0.3);
    color: #E11D2E;
    font-size: 1.25rem;
    transition: all 0.3s ease;
    box-shadow:
        0 2px 8px rgba(225, 29, 46, 0.2),
        inset 0 1px 0 0 rgba(255, 255, 255, 0.1);
}

.premium-card:hover .premium-card-icon {
    background: linear-gradient(135deg, rgba(225, 29, 46, 0.4) 0%, rgba(225, 29, 46, 0.3) 100%);
    border-color: #E11D2E;
    color: #FF2D3E;
    transform: scale(1.05) rotate(-5deg);
    box-shadow:
        0 4px 12px rgba(225, 29, 46, 0.4),
        0 0 20px rgba(225, 29, 46, 0.3),
        inset 0 1px 0 0 rgba(255, 255, 255, 0.2);
}

/* Connector Line (Vertical Flow) */
.solution-connector {
    position: absolute;
    left: 24px;
    /* Align with icon center */
    top: 60px;
    bottom: -30px;
    width: 2px;
    background: rgba(11, 27, 61, 0.1);
    /* Navy tint */
    z-index: 0;
}

.premium-card:last-child .solution-connector {
    display: none;
}

.solution-connector::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 40%;
    background: linear-gradient(to bottom, #E11D2E, transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.premium-card:hover .solution-connector::after {
    opacity: 1;
    animation: flow-down 1.5s infinite;
}

@keyframes flow-down {
    0% {
        top: -100%;
    }

    100% {
        top: 100%;
    }
}

/* --- MOTION SYSTEM STYLES (Tech Section) --- */

/* Container for the hub system - enables 3D context */
.hub-system-container {
    perspective: 1000px;
    /* Dynamic Spotlight Variables managed by JS */
    --mouse-x: 50%;
    --mouse-y: 50%;
    position: relative;
    /* Ensure relative positioning for absolute children */
}

/* Spotlight / Glow Effect */
.hub-system-container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(600px circle at var(--mouse-x) var(--mouse-y),
            rgba(225, 29, 46, 0.08),
            transparent 40%);
    pointer-events: none;
    z-index: 5;
    transition: opacity 0.5s ease;
    opacity: 1;
}

/* Hub Cards - Enhanced for Motion */
.hub-card {
    /* Existing styles preserved, but enhanced for 3D */
    transform-style: preserve-3d;
    backface-visibility: hidden;
    will-change: transform;
    /* Transition handled by GSAP for movement, but we keep colors smooth */
    transition: box-shadow 0.3s ease, border-color 0.3s ease;
}

.hub-card.is-hovering {
    border-color: var(--color-red) !important;
    box-shadow: 0 10px 30px -5px rgba(225, 29, 46, 0.2) !important;
    z-index: 50 !important;
}

/* Reduced Motion Override */
@media (prefers-reduced-motion: reduce) {
    .hub-card {
        transition: transform 0.3s ease !important;
        transform: none !important;
    }

    .hub-system-container::after {
        display: none;
    }
}

/* --- INDUSTRY BENTO REDESIGN --- */
.industry-bento-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    position: relative;
    z-index: 10;
}

@media (min-width: 1024px) {
    .industry-bento-grid {
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(2, 320px);
    }

    .industry-bento-card.card-large {
        grid-row: span 2;
        height: 100%;
    }
}

.industry-bento-card {
    background: #0B1B3D;
    /* Dark navy */
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.08);
    /* 8% opacity */
    border-radius: 2rem;
    padding: 4rem 2.5rem 2.5rem 2.5rem;
    /* Tesla-style top-weighting start */
    position: relative;
    overflow: hidden;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1), box-shadow 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    /* Removed flex-end for top-weighted hierarchy */
}

.industry-bento-card.card-large {
    padding-top: 5rem;
    /* More gravity for larger card */
}

.industry-bento-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.4);
    border-color: rgba(255, 255, 255, 0.12);
    /* 12% opacity */
}

/* Internal Card Elements */
.industry-bento-card .card-content {
    position: relative;
    z-index: 2;
}

.industry-bento-card .card-icon {
    font-size: 2.5rem;
    color: var(--color-red);
    margin-bottom: 1.25rem;
    /* Tightened cluster */
    transition: transform 0.6s ease;
}

.industry-bento-card.card-large .card-icon {
    font-size: 3.5rem;
    /* Larger icon for primary card */
}

.industry-bento-card:hover .card-icon {
    transform: scale(1.05);
}

.industry-bento-card h3 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #FFFFFF;
    margin-bottom: 0.75rem;
    /* Tightened cluster */
}

.industry-bento-card.card-large h3 {
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    padding-bottom: 1.5rem;
    margin-bottom: 1.5rem;
    display: block;
}

.industry-bento-card p {
    font-family: 'Inter', sans-serif;
    font-size: 0.95rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.6);
    max-width: 90%;
}

/* --- LIGHTING SYSTEM --- */
.industry-ambient-light {
    position: absolute;
    top: 5%;
    left: 10%;
    width: 80%;
    height: 60%;
    background: radial-gradient(ellipse at top center,
            rgba(255, 255, 250, 0.08) 0%,
            rgba(255, 255, 255, 0.04) 30%,
            transparent 70%);
    filter: blur(80px);
    pointer-events: none;
    z-index: 1;
    /* Combined drift: Â±20px Vertical (30s), Â±10px Horizontal (40s) */
    animation: lightDriftV 30s ease-in-out infinite alternate,
        lightDriftH 40s ease-in-out infinite alternate;
}

@keyframes lightDriftV {
    from {
        transform: translateY(-20px);
    }

    to {
        transform: translateY(20px);
    }
}

@keyframes lightDriftH {
    from {
        transform: translateX(-10px);
    }

    to {
        transform: translateX(10px);
    }
}

/* --- NOISE LAYER --- */
.industry-noise-texture {
    position: absolute;
    inset: 0;
    opacity: 0.02;
    /* 2% opacity */
    pointer-events: none;
    z-index: 2;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.6' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    animation: noiseAnim 0.2s infinite;
}

@keyframes noiseAnim {
    0% {
        transform: translate(0, 0);
    }

    10% {
        transform: translate(-1px, -1px);
    }

    20% {
        transform: translate(-2px, 1px);
    }

    30% {
        transform: translate(1px, -2px);
    }

    40% {
        transform: translate(-1px, 2px);
    }

    50% {
        transform: translate(-2px, -2px);
    }

    60% {
        transform: translate(2px, 1px);
    }

    70% {
        transform: translate(1px, 1px);
    }

    80% {
        transform: translate(-2px, 1px);
    }

    90% {
        transform: translate(1px, 2px);
    }

    100% {
        transform: translate(1px, -1px);
    }
}

@media (prefers-reduced-motion: reduce) {

    .industry-ambient-light,
    .industry-noise-texture {
        animation: none;
    }

    .industry-bento-card {
        transition: none;
    }
}