    --shimmer-button-speed: 3s;
    --shimmer-button-spread: 90deg;
    --shimmer-button-radius: 100px;
}

@keyframes shimmer-spin-around {
    0% {
        transform: translate(-50%, -50%) rotate(0deg);
    }

    100% {
        transform: translate(-50%, -50%) rotate(360deg);
    }
}

@keyframes shimmer-slide {
    0% {
        transform: translate(-50%, -50%) translate3d(0, 0, 0);
    }

    100% {
        transform: translate(-50%, -50%) translate3d(0, 0, 0);
    }
}

.shimmer-btn-wrapper {
    position: relative;
    z-index: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    overflow: hidden;
    white-space: nowrap;
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1.25rem 2.5rem;
    color: white;
    background: var(--shimmer-button-bg);
    border-radius: var(--shimmer-button-radius);
    transition: transform 0.3s ease;
}

.shimmer-btn-wrapper:active {
    transform: translateY(1px);
}

/* Spark Container */
.shimmer-spark-container {
    position: absolute;
    inset: 0;
    z-index: -30;
    overflow: visible;
    filter: blur(2px);
}

.shimmer-spark {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 200%;
    aspect-ratio: 1;
    border-radius: 0;
    animation: shimmer-spin-around var(--shimmer-button-speed) linear infinite;
    background: conic-gradient(from calc(270deg - (var(--shimmer-button-spread) * 0.5)), transparent 0, var(--shimmer-button-color) var(--shimmer-button-spread), transparent var(--shimmer-button-spread));
}

/* Backdrop */
.shimmer-btn-backdrop {
    position: absolute;
    inset: 1px;
    /* The "cut" size */
    background: var(--shimmer-button-bg);
    border-radius: inherit;
    z-index: -20;
}

/* Highlight layer */
.shimmer-highlight {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    box-shadow: inset 0 -8px 10px rgba(255, 255, 255, 0.12);
    transition: all 0.3s ease;
}

.shimmer-btn-wrapper:hover .shimmer-highlight {
