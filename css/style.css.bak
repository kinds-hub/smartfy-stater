    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.footer-links a {
    font-family: var(--font-body);
    font-size: 0.95rem;
    color: var(--color-slate);
    text-decoration: none;
    transition: color 0.2s ease;
}

.footer-links a:hover {
    color: var(--color-white);
}

.social-link {
    width: 2.5rem;
