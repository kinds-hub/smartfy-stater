/* --- SOLUTION CARD VARIANTS (Ported from React CVA) --- */

/* Base solution card */
.sol-card {
    position: relative;
    width: 100%;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
}

.sol-card-content {
    padding: 1.5rem;
}

/* Variant: Gradient Lines */
.sol-card--gradient {
    position: relative;
    padding: 0 1.5rem;
}

.sol-card--gradient .gradient-line-h {
    position: absolute;
    left: 0;
    height: 1px;
    width: 100%;
    background: linear-gradient(to right, transparent, rgba(225, 29, 46, 0.3), rgba(255, 255, 255, 0.15), transparent);
}

.sol-card--gradient .gradient-line-h.top {
    top: 1rem;
}

.sol-card--gradient .gradient-line-h.bottom {
    bottom: 1rem;
}

.sol-card--gradient .gradient-line-v {
    position: absolute;
    top: 0;
    width: 1px;
    height: 100%;
    background: linear-gradient(to bottom, transparent, rgba(225, 29, 46, 0.2), rgba(255, 255, 255, 0.1), transparent);
}

.sol-card--gradient .gradient-line-v.left {
    left: 0;
}

.sol-card--gradient .gradient-line-v.right {
    right: 0;
}

/* Variant: Plus Icons */
.sol-card--plus {
    border: 1px dashed rgba(255, 255, 255, 0.12);
    position: relative;
}

.sol-card--plus .plus-icon {
    position: absolute;
    width: 24px;
    height: 24px;
    color: rgba(225, 29, 46, 0.5);
    z-index: 10;
}

.sol-card--plus .plus-icon.tl {
    top: -12px;
    left: -12px;
}

.sol-card--plus .plus-icon.tr {
    top: -12px;
    right: -12px;
}

.sol-card--plus .plus-icon.bl {
    bottom: -12px;
    left: -12px;
}

.sol-card--plus .plus-icon.br {
    bottom: -12px;
    right: -12px;
}

/* Variant: Corner Borders */
.sol-card--corners {
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 0.5rem;
    position: relative;
}

.sol-card--corners .corner {
    position: absolute;
    width: 1.5rem;
    height: 1.5rem;
    border-color: rgba(225, 29, 46, 0.5);
    z-index: 10;
}

.sol-card--corners .corner.tl {
    top: -1px;
    left: -1px;
    border-left: 2px solid;
    border-top: 2px solid;
    border-top-left-radius: 0.375rem;
}

.sol-card--corners .corner.tr {
    top: -1px;
    right: -1px;
    border-right: 2px solid;
    border-top: 2px solid;
    border-top-right-radius: 0.375rem;
}

.sol-card--corners .corner.bl {
    bottom: -1px;
    left: -1px;
    border-left: 2px solid;
    border-bottom: 2px solid;
    border-bottom-left-radius: 0.375rem;
}

.sol-card--corners .corner.br {
    bottom: -1px;
    right: -1px;
    border-right: 2px solid;
    border-bottom: 2px solid;
    border-bottom-right-radius: 0.375rem;
}

/* Variant: Dots Pattern */
.sol-card--dots {
    position: relative;
    border: 1px dashed rgba(255, 255, 255, 0.08);
    border-radius: 0.5rem;
    padding: 1rem 1.5rem;
}

.sol-card--dots .dot-indicator {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #E11D2E;
    box-shadow: 0 0 8px rgba(225, 29, 46, 0.6);
    position: absolute;
}

.sol-card--dots .dot-indicator.tl {
    top: -3px;
    left: -3px;
}

.sol-card--dots .dot-indicator.tr {
    top: -3px;
    right: -3px;
}

.sol-card--dots .dot-indicator.bl {
    bottom: -3px;
    left: -3px;
}

.sol-card--dots .dot-indicator.br {
    bottom: -3px;
    right: -3px;
}

/* Card hover effects */
.sol-card:hover {
    transform: translateY(-2px);
}

.sol-card--plus:hover {
    border-color: rgba(225, 29, 46, 0.3);
}

.sol-card--corners:hover {
    border-color: rgba(255, 255, 255, 0.12);
}

.sol-card--corners:hover .corner {
    border-color: #E11D2E;
}

/* --- HEADING LINE-MASK REVEAL (Apple/Linear Style) --- */
.reveal-mask {
    overflow: hidden;
}

.reveal-mask .reveal-line {
    display: block;
    will-change: transform;
}

/* Fade-up utility for staggered entrances */
.fade-up {
    opacity: 0;
    transform: translateY(24px);
    transition: opacity 0.7s cubic-bezier(0.23, 1, 0.32, 1),
        transform 0.7s cubic-bezier(0.23, 1, 0.32, 1);
}

.fade-up.visible {
    opacity: 1;
    transform: translateY(0);
}

/* Raster scan line effect for Value Intelligence */
.raster-heading {
    position: relative;
    overflow: hidden;
}

.raster-heading::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(to right, transparent, #E11D2E, transparent);
    opacity: 0;
    animation: raster-scan 3s ease-in-out infinite;
    animation-delay: 1s;
}

@keyframes raster-scan {
    0% {
        top: 0;
        opacity: 0;
    }

    10% {
        opacity: 0.8;
    }

    90% {
        opacity: 0.8;
    }

    100% {
        top: 100%;
        opacity: 0;
    }
}

