}

.newsletter-input:focus {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(225, 29, 46, 0.4);
    /* Red tint */
    box-shadow: 0 0 15px rgba(225, 29, 46, 0.15);
    /* Glow */
    outline: none;
}

/* Industry Card Meta Positioning & Reveal */
.industry-card .card-content {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.industry-card .card-desc {
    flex-grow: 1;
    margin-bottom: 2rem;
}

/* Shift meta up so it doesn't touch bottom line */
.industry-card .card-meta {
    margin-top: auto;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    position: relative;

