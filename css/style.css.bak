/* --- INDUSTRY BENTO GRID (Enterprise Standard) --- */

.industry-card {
    position: relative;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 1rem;
    /* Refined radius (16px) */
    overflow: hidden;
    padding: 2rem;
    transition: transform var(--duration-steady) var(--ease-premium),
        border-color var(--duration-steady) var(--ease-premium),
        box-shadow var(--duration-steady) var(--ease-premium);
    display: flex;
    flex-direction: column;
    height: 100%;
}

.industry-card:hover {
    transform: translateY(-4px);
    border-color: rgba(225, 29, 46, 0.3);
    box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.3);
    background: rgba(255, 255, 255, 0.03);
}

.card-glass-layer {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at top right, rgba(255, 255, 255, 0.05), transparent 60%);
    opacity: 0;
    transition: opacity var(--duration-steady) ease;
    pointer-events: none;
}

.industry-card:hover .card-glass-layer {
    opacity: 1;
}

/* Card Content Layout */
.industry-card .card-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    position: relative;
    z-index: 10;
}

/* Header Alignment */
.industry-card .card-header {
    display: flex;
    align-items: flex-start;
    /* Anchor to top */
    gap: 1rem;
    margin-bottom: 1.5rem;
}

.industry-card .icon-box {
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(225, 29, 46, 0.1);
    color: var(--color-red);
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
}

.industry-card .card-title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-white);
    margin: 0;
    padding-top: 0.25rem;
    /* Optical alignment with icon */
    line-height: 1.2;
}

/* Description */
.industry-card .card-desc {
    font-family: var(--font-body);
    font-size: 0.95rem;
    color: var(--color-slate);
    line-height: 1.6;
    margin-bottom: auto;
    /* Push meta to bottom */
    padding-left: 0;
}

/* Meta Footer */
.industry-card .card-meta {
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.75rem;
    font-family: var(--font-display);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.4);
    font-weight: 600;
}

.industry-card .arrow-icon {
    font-size: 1rem;
    color: var(--color-red);
    opacity: 0;
    transform: translateX(-5px);
    transition: all var(--duration-micro) var(--ease-premium);
}

.industry-card:hover .arrow-icon {
    opacity: 1;
    transform: translateX(0);
}

@import 'motion.css';


:root {
    /* --- COLOR PALETTE (Enterprise AI) --- */
    --color-navy: #0B1B3D;
    --color-red: #E11D2E;
    --color-slate: #94A3B8;
    --color-white: #FFFFFF;
    --color-bg-dark: #020617;
    /* Deep Navy/Black base */

    /* --- SPACING SYSTEM (Structured) --- */
    --space-xs: 0.25rem;
    /* 4px */
    --space-sm: 0.5rem;
    /* 8px */
    --space-md: 1rem;
    /* 16px */
    --space-lg: 2rem;
    /* 32px */
    --space-xl: 4rem;
    /* 64px */
    --space-2xl: 6rem;
    /* 96px */

    /* --- GRID & LAYOUT --- */
    --container-width: 1280px;
    --grid-gap: 24px;

    /* --- TYPOGRAPHY --- */
    --font-display: 'Space Grotesk', sans-serif;
    --font-body: 'Inter', sans-serif;
}

/* --- GLOBAL TYPOGRAPHY ENFORCEMENT --- */
h1,
h2,
h3,
h4,
h5,
h6 {
    font-family: var(--font-display);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--color-white);
    margin-top: 0;
    margin-bottom: var(--space-md);
    /* 16px strict gap */
}

p {
    font-family: var(--font-body);
    font-weight: 400;
    line-height: 1.6;
    color: var(--color-slate);
    margin-bottom: var(--space-lg);
    max-width: 65ch;
    /* Readable measure */
}

.text-calm {
    opacity: 0.8;
}

/* Remove default margins from last children to prevent spacing leaks */
*:last-child {
    margin-bottom: 0;
}

body {
    background-color: var(--color-bg-dark);
    color: var(--color-navy);
    overflow-x: hidden;
    cursor: default;
    position: relative;
}

/* --- BACKGROUND SYSTEMS --- */
.bg-overlay-container {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: -1;
}

/* Dark Sphere Grid Background */
.dark-sphere-grid {
    position: absolute;
    inset: 0;
    background: var(--color-bg-dark);
    background-image:
        linear-gradient(to right, var(--color-grid) 1px, transparent 1px),
        linear-gradient(to bottom, var(--color-grid) 1px, transparent 1px);
    background-size: 32px 32px, 32px 32px;
}

/* Fine-grain Noise Texture */
.noise-texture {
    position: absolute;
    inset: 0;
    opacity: 0.015;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    mix-blend-mode: overlay;
}

/* Mesh Gradients (Blobs) */
.brand-glow-1 {
    position: absolute;
    top: -10%;
    right: -5%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(11, 27, 61, 0.08) 0%, transparent 70%);
    filter: blur(80px);
}

.brand-glow-2 {
    position: absolute;
    bottom: 20%;
    left: -5%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(225, 29, 46, 0.06) 0%, transparent 70%);
    filter: blur(100px);
}

/* --- TYPOGRAPHY GRADIENTS --- */
.text-navy-to-slate {
    background: linear-gradient(135deg, #FFFFFF 0%, var(--color-slate) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

/* --- INFINITE SCROLL ANIMATION --- */
@keyframes scroll-right {
    0% {
        transform: translateX(0);
    }

    100% {
        transform: translateX(-50%);
    }
}

.infinite-scroll {
    animation: scroll-right 40s linear infinite;
}

/* Pause on hover optional */
.scroll-container:hover .infinite-scroll {
    animation-play-state: paused;
}

.scroll-container {
    mask: linear-gradient(90deg,
            transparent 0%,
            black 10%,
            black 90%,
            transparent 100%);
    -webkit-mask: linear-gradient(90deg,
            transparent 0%,
            black 10%,
            black 90%,
            transparent 100%);
    overflow: hidden;
}

.image-item {
    transition: transform 0.3s ease, filter 0.3s ease;
}

.image-item:hover {
    transform: scale(1.05);
    filter: brightness(1.1);
}

/* --- Typography --- */
.font-display {
    font-family: 'Space Grotesk', sans-serif;
}

.font-body {
    font-family: 'Inter', sans-serif;
}

/* --- Glassmorphism --- */
/* .glass-nav styles moved to Tailwind utility classes in HTML for floating effect */

/* Professional Chromatic Backlight - Senior Developer Style */
.logo-wrapper {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
}

.logo-wrapper::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 140%;
    height: 140%;
    /* Chromatic Bloom: Blue-tinted glow instead of harsh white */
    background: radial-gradient(circle, rgba(59, 130, 246, 0.22) 0%, transparent 70%);
    filter: blur(20px);
    z-index: -1;
    pointer-events: none;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0.5;
    /* Reduced from 0.8 for subtle integration */
}

.logo-wrapper:hover::before {
    width: 160%;
    height: 160%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.3) 0%, transparent 70%);
    opacity: 0.8;
}

.nav-logo-img {
    position: relative;
    z-index: 2;
    /* Added contrast/saturation so logo colors pop naturally */
    filter: contrast(1.1) saturate(1.1);
    transition: all 0.3s ease;
}

.logo-wrapper:hover .nav-logo-img {
    transform: scale(1.02);
    filter: contrast(1.15) saturate(1.15);
}

/* Ghost Variant Link (Restored) */
.nav-ghost-link {
    padding: 0.5rem 0.75rem;
    font-family: 'Inter', sans-serif;
    font-size: 0.9rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.75);
    transition: all 0.2s ease;
    text-decoration: none;
    white-space: nowrap;
}

.nav-ghost-link:hover {
    color: #FFFFFF;
}

/* Sheet Drawer Styles */
.sheet-link {
    display: block;
    padding: 0.75rem 0;
    font-family: 'Inter', sans-serif;
    font-size: 1.125rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.8);
    transition: color 0.2s ease;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.sheet-link:hover {
    color: #E11D2E;
}

/* --- Cinematic Intro --- */
#intro-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: var(--color-navy);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
}

#intro-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

/* --- Hero Section --- */
.hero-canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}

/* --- Navigation Active Links --- */
.nav-link.active {
    color: var(--color-red);
    font-weight: 600;
}

/* --- Mobile Menu --- */
#mobile-menu {
    transform: translateX(100%);
    transition: transform 0.6s cubic-bezier(0.85, 0, 0.15, 1);
    background: rgba(11, 27, 61, 0.95);
    backdrop-filter: blur(15px);
}

#mobile-menu.active {
    transform: translateX(0);
}

/* --- Lenis Smooth Scroll --- */
html.lenis {
    height: auto;
}

.lenis.lenis-smooth {
    scroll-behavior: auto;
}

.lenis.lenis-smooth [data-lenis-prevent] {
    overscroll-behavior: contain;
}

/* --- Liquid Progress Bar --- */
.progress-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    z-index: 10000;
    pointer-events: none;
}

.progress-bar {
    height: 100%;
    background-color: var(--color-red);
    width: 0%;
    transition: width 0.1s linear;
}

/* --- 3D Tilt Cards --- */
.tilt-card {
    transform-style: preserve-3d;
    transform: perspective(1000px);
}

.tilt-content {
    transform: translateZ(20px);
}

/* --- Split-Pane Architectural Showcase --- */
.split-pane-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
}

@media (min-width: 1024px) {
    .split-pane-wrapper {
        grid-template-columns: 4fr 8fr;
        align-items: start;
    }
}

.sticky-showcase-sidebar {
    position: static;
}

@media (min-width: 1024px) {
    .sticky-showcase-sidebar {
        position: sticky;
        top: 15vh;
        height: min-content;
    }
}

.pillar-card {
    background: rgba(255, 255, 255, 0.02);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 3rem;
    padding: 4rem;
    margin-bottom: 4rem;
    position: relative;
    overflow: hidden;
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.pillar-card:hover {
    border-color: rgba(225, 29, 46, 0.2);
    transform: translateY(-10px);
    background: rgba(255, 255, 255, 0.05);
}





/* Scanning Line Animation */
.scan-line {
    position: absolute;
    top: -100%;
    left: 0;
    width: 100%;
    height: 50%;
    background: linear-gradient(to bottom,
            rgba(225, 29, 46, 0) 0%,
            rgba(225, 29, 46, 0.05) 90%,
            rgba(225, 29, 46, 0.2) 100%);
    pointer-events: none;
    z-index: 10;
}

.pillar-card:hover .scan-line {
    animation: scan 3s linear infinite;
}

@keyframes scan {
    0% {
        top: -50%;
    }

    100% {
        top: 100%;
    }
}

/* Pillar Index Counter */
.pillar-index {
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 800;
    font-size: 8rem;
    line-height: 1;
    color: var(--color-navy);
    opacity: 0.03;
    position: absolute;
    top: -1rem;
    right: 2rem;
    user-select: none;
}

.blueprint-reveal {
    mask-image: linear-gradient(to bottom, black 50%, transparent 100%);
    opacity: 0.6;
}

/* Mesh Glow System for Cards */
.pillar-card-glow {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 5;
    opacity: 0;
    transition: opacity 0.8s ease;
}

.pillar-card:hover .pillar-card-glow {
    opacity: 1;
}

.glow-navy {
    background: radial-gradient(circle at 80% 20%, rgba(11, 27, 61, 0.08) 0%, transparent 50%);
}

.glow-red {
    background: radial-gradient(circle at 20% 80%, rgba(225, 29, 46, 0.08) 0%, transparent 50%);
}

.glow-mixed {
    background:
        radial-gradient(circle at 10% 10%, rgba(225, 29, 46, 0.05) 0%, transparent 40%),
        radial-gradient(circle at 90% 90%, rgba(11, 27, 61, 0.05) 0%, transparent 40%);
}

/* --- Hero Kinetic Enhancement --- */
.hero-paths-container {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
    overflow: hidden;
}

.hero-path {
    stroke: var(--color-navy);
    fill: none;
    vector-effect: non-scaling-stroke;
}

/* --- Centered Footer Watermark --- */
.footer-watermark-large {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: clamp(8rem, 20vw, 35rem);
    font-weight: 900;
    font-family: 'Space Grotesk', sans-serif;
    color: rgba(255, 255, 255, 0.03);
    /* Extremely subtle */
    white-space: nowrap;
    z-index: 0;
    pointer-events: none;
    user-select: none;
    letter-spacing: -0.05em;
    text-transform: lowercase;
}

/* --- Hero Red Pulse --- */
.hero-pulse {
    box-shadow: 0 0 0 0 rgba(225, 29, 46, 0.7);
    animation: pulse-red 2s infinite;
}

@keyframes pulse-red {
    0% {
        transform: scale(0.95);
        box-shadow: 0 0 0 0 rgba(225, 29, 46, 0.7);
    }

    70% {
        transform: scale(1);
        box-shadow: 0 0 0 10px rgba(225, 29, 46, 0);
    }

    100% {
        transform: scale(0.95);
        box-shadow: 0 0 0 0 rgba(225, 29, 46, 0);
    }
}

/* --- Smartify Light Cards (High Contrast Standards) --- */
.light-card {
    background: #F1F3F8;
    border: 1px solid rgba(11, 27, 61, 0.1);
    border-radius: 1.5rem;
    /* rounded-2xl */
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
    /* Strict Centering and Flex Layout */
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    /* Ensure equal heights in grid */
}

/* Noise Texture Overlay */
.light-card::after {
    content: "";
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.015;
    /* 1.5% opacity as requested */
    pointer-events: none;
    z-index: 1;
    mix-blend-mode: multiply;
}

.light-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-red);
    box-shadow: 0 20px 40px -5px rgba(11, 27, 61, 0.15);
}

.card-watermark {
    position: absolute;
    top: -20px;
    right: -20px;
    font-size: 8rem;
    opacity: 0.03;
    color: var(--color-navy);
    z-index: 0;
    pointer-events: none;
    transition: all 0.5s ease;
}

.light-card:hover .card-watermark {
    transform: rotate(15deg) scale(1.1);
    opacity: 0.06;
}

.card-header {
    padding: 2.5rem 2rem 1.5rem 2rem;
    /* Increased top padding */
    border-bottom: 1px solid rgba(11, 27, 61, 0.05);
    position: relative;
    z-index: 10;
